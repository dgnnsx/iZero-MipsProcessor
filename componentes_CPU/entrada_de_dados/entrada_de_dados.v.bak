module entrada_de_dados(dado_Entrada, IN, dado, flag_Leitura);
	// ----------Portas de Entrada---------- //
	input [7:0] chaves; // Valor de entrada
	input IN; // Botao
	
	// ----------Portas de Saida---------- //
	output reg [31:0] dado; // Dado de entrada
	output reg flag_IN; // Flag para a Unidade de Controle

	// ----------Controle---------- //
	reg estado, prox_estado; // Estados
	
	// Maquina de estados
	always @ (estado or IN) begin
		case(estado)
			1'b0: begin
				if(chaves[7] == 0) begin
					prox_estado = 1'b1;
					dado = chaves + 32'b0;
					flag_IN = 1'b1;
				end
				else begin
					prox_estado = 1'b1;
					dado = chaves + 32'b11111111111111111111111100000000;
					flag_IN = 1'b1;
				end
			end
			1'b1: begin
				prox_estado = 1'b0;
				dado = 32'b0;
				flag_IN = 1'b0;
			end
		endcase
	end
	
	always @ (posedge(IN)) begin
		estado <= prox_estado;
	end
	
endmodule
