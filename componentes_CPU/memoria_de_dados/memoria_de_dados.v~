module memoria_de_dados(clock, endereco, memWrite, memRead, dado_Escrito, dado_Lido);

	// ----------Portas de Entrada---------- //
	input [31:0] dado_Escrito; // Valor a ser escrito na memoria
	input [25:0] endereco; // Endereco
	
	// ----------Portas de Saida---------- //
	output reg [31:0] dado_Lido; // Valor a ser lido da memoria	

	// ----------Controle---------- //
	input clock; // Clock
	input memWrite; // Sinal para Escrita
	input memRead; // Sinal para Leitura
	
	reg[31:0] memoria_dados[31:0]; // Memoria de dados
	
	always @ (posedge clock) begin
		if(memWrite) begin
			memoria_dados[endereco] = dado_Escrito;
		end
		if(memRead) begin
			dado_Lido = memoria_dados[endereco];
		end
	end
	
	//assign dado_Lido = memoria_dados[endereco];
endmodule
