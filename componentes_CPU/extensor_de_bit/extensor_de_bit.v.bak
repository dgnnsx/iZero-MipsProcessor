module extensor_de_bit(entrada1, entrada2);
	// ----------Portas de Entrada---------- //	
	input [15:0] entrada1; // Dado que ira para ULA
	input [15:0] entrada2; // Dado que ira para calculo de branch	

	// ----------Portas de Saida---------- //
	output reg [25:0] dadoJP; // Endereco de branch extendido
	output reg [31:0] dadoULA; // Operando para ULA
	
	// ----------Controle---------- //
	input selecao; // Seleciona qual dos dois extender
	
	always @ (*) begin
		case(selecao)
			1'b0: begin
				if(entrada1[15] == 1'b1)
					dadoULA = entrada1 + 32'b11111111111111110000000000000000;
				else
					dadoULA = entrada1 + 32'b00000000000000000000000000000000;
			
			
			end
		
		endcase	
	end




endmodule
