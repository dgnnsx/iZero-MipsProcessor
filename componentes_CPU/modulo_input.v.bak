module modulo_input(in, out);

	localparam KEYS_WIDTH = 18;
	localparam DATA_WIDTH = 32;
	
	input [KEYS_WIDTH-1:0] in; // Valor de entrada
	
	output reg [DATA_WIDTH-1:0] out; // Dado de entrada
	
	always @ (*) begin
		dado <= in[KEYS_WIDTH-1] == 1'b0 ? in + 32'b0 : in + 32'b11111111111111000000000000000000;
	end
endmodule
